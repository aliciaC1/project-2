<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            {{#if message}}
            <p>{{{ message }}}</p>
            {{/if}}
            <form method="POST" action="/register">
                <div class="form-group">
                    <label for="id_name">Full Name</label>
                    <input type="text" id="id_name" name="name" class="form-control" value="{{name}}" />
                    {{{errorField errorFields.name}}}
                </div>
                <div class="form-group">
                    <label for="id_email">E-mail</label>
                    <input type="text" id="id_email" name="email" class="form-control" value="{{email}}" />
                    {{{errorField errorFields.email}}}
                </div>
                <div class="form-group">
                    <label for="id_password">Password</label>
                    <input type="password" id="id_password" name="password" class="form-control" />
                    {{{errorField errorFields.password}}}
                </div>
                <div class="form-group">
                    <label for="id_password">Confirm Password</label>
                    <input type="password" id="id_conf_password" name="password_conf" class="form-control" />
                    {{{errorField errorFields.passwordConf}}}
                </div>
                <button type="submit">Login</button>
            </form>
        </div>
    </div>
</div>




<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            {{#if message}}
            <p>{{{ message }}}</p>
            {{/if}}
            <form method="POST" action="/login">
                <div class="form-group">
                    <label for="id_userId">Username</label>
                    <input type="text" id="id_email" name="email" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="id_password">Password</label>
                    <input type="password" id="id_password" name="password" class="form-control" />
                </div>
                <button type="submit">Login</button>
            </form>
            <div class="fb-login-button" data-max-rows="1" data-size="large" data-button-type="continue_with"
                data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="false" data-onlogin="checkLoginState();"></div>
            <button id="signin-button" onclick="handleSignInClick()">Sign In</button>
            <button id="signout-button" onclick="handleSignOutClick()">Sign Out</button>
        </div>
    </div>
</div>
