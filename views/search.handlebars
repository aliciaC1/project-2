<div class="ui secondary pointing menu right floated">
    {{#if user}}
    <a class="item active">{{user.name}}</a>
    {{/if}}
    <a class="item" href="/logout">
        Log Out
    </a>
</div>

<div class="container">
    <div class="ui middle aligned centered grid">
        <div class="row">
            <div class="search-info">
                <div class='ui grid'>
                    <div class="sixteen wide column">
                        <img class="hagLogo" src="/imgs/logocaps.png">
                    </div>
                    <div class="sixteen wide column">
                        <div class="ui text shape">
                            <div class="sides">
                                <div class="ui header side active">
                                    <h3>Get Started...</h3>
                                </div>
                                <div class="ui header side">
                                    <h3>Enter Your Location</h3>
                                </div>
                                <div class="ui header side">
                                    <h3>Select a Product</h3>
                                </div>
                            </div>
                        </div>
                        <div class="ui divider"></div>
                    </div>
                    <div class="sixteen wide column">
                        <form id="search-form" action="">
                            <div class="ui floating dropdown labeled search icon button search-select" id="location-select">
                                <i class="map marker alternate icon"></i>
                                <span class="text">Select Location</span>
                                <div class="menu">
                                    <div class="item locationOpt" data-value="1" id="newYork">
                                        New York
                                        <img class="ui avatar image" src="/imgs/NYICON.png">
                                    </div>
                                    <div class="item locationOpt" data-value="2" id="detroit">
                                        Detroit
                                        <img class="ui avatar image" src="/imgs/DETROIT.png">
                                    </div>
                                    <div class="item locationOpt" data-value="3" id="cleveland">
                                        Cleveland
                                        <img class="ui avatar image" src="/imgs/exports_Cleveland-512.png">
                                    </div>
                                </div>
                            </div>

                    </div>

                    <div class="sixteen wide column">
                        <div class="ui floating dropdown labeled search icon button search-select" id="product-select">
                            <i class="world icon"></i>
                            <span class="text">Select Product</span>
                            <div class="menu">
                                <div class="item productOpt" data-value="1" id="t-shirt">
                                    T-Shirt
                                    <img class="ui avatar image" src="/imgs/ILNYT.png">
                                </div>
                                <div class="item productOpt" data-value="2" id="fidget-spinner">
                                    Fidget Spinner
                                    <img class="ui avatar image" src="/imgs/spinner_fidget_toy-11-01-512.png">
                                </div>
                                <div class="item productOpt" data-value="3" id="key-chain">
                                    Key Chain
                                    <img class="ui avatar image" src="/imgs/keychain.png">
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                    <div class="sixteen wide column">
                        <a class="ui animated button submit button" tabindex="0" id="searchResult" href="/example/1/1">
                            <div class="visible content">Next</div>
                            <div class="hidden content">
                                <i class="right arrow icon"></i>
                            </div>
                        </a>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/search.js"></script>